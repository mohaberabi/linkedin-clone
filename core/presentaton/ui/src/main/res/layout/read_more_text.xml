<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/readMoreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:maxLines="3"
        android:text="SADASDsakdnsalkdnasljkdaslkdaskldnsalkdaslknlkasdnlkasdnlaksdnaslkdnlaskd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/readMoreToggleTextView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Read More"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/readMoreTextView"
        app:layout_constraintEnd_toEndOf="@+id/readMoreTextView"
        android:layout_marginEnd="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
